<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.project.yameokja.mappers.CategoryMapper">

	<resultMap id="cateResultMap" type="Category">
		<id property="cNo" column="c_no" />
		
		<result property="cName" column="c_name" />
		<result property="cOrder" column="c_order" />
	</resultMap>

	<select id="caList" resultType="Category" resultMap="cateResultMap">
		SELECT * FROM category
			<where>
				<if test="type == 'store'">
					c_no &lt; 100
				</if>
			</where>
			ORDER BY c_order
	</select>

</mapper>